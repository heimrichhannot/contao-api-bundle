{
  "name": "heimrichhannot/contao-privacy-api-bundle",
  "type": "contao-bundle",
  "description": "API to access (restricted) contao privacy module from 3rd-party applications.",
  "license": "LGPL-3.0-or-later",
  "require": {
    "php": "^7.1",
    "contao/core-bundle": "^4.4",
    "symfony/framework-bundle": "^3.4",
    "heimrichhannot/contao-utils-bundle": "^2.0",
    "twig/extensions": "^1.5",
    "urodoz/truncate-html": "^1.0"
  },
  "require-dev": {
    "contao/test-case": "^1.1",
    "contao/manager-plugin": "^2.0",
    "friendsofphp/php-cs-fixer": "^2.2",
    "phpunit/phpunit": ">=6.0 <6.5",
    "php-http/guzzle6-adapter": "^1.1",
    "php-http/message-factory": "^1.0.2",
    "php-coveralls/php-coveralls": "^2.0",
    "symfony/phpunit-bridge": "^3.2"
  },
  "conflict": {
    "contao/core": "*",
    "contao/manager-plugin": "<2.0 || >=3.0"
  },
  "autoload": {
    "psr-4": {
      "HeimrichHannot\\PrivacyApiBundle\\": "src/"
    },
    "classmap": [
      "src/"
    ],
    "exclude-from-classmap": [
      "src/Resources/contao/config/",
      "src/Resources/contao/dca/",
      "src/Resources/contao/languages/",
      "src/Resources/contao/templates/",
      "doc"
    ]
  },
  "autoload-dev": {
    "psr-4": {
      "HeimrichHannot\\PrivacyApiBundle\\Test\\": "tests/"
    }
  },
  "config": {
    "preferred-install": "dist"
  },
  "extra": {
    "contao-manager-plugin": "HeimrichHannot\\PrivacyApiBundle\\ContaoManager\\Plugin"
  }
}

